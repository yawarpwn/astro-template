---
import type { Props as PropsBaseHead } from "../components/BaseHead.astro";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { Sprite } from "astro-icon";
export interface Props extends PropsBaseHead {
  hero?: boolean;
}

const { hero, ...head } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead {...head} />
  </head>
  <body>
    <Sprite.Provider>
      <Header />
      <main class="min-h-screen overflow-x-hidden">
        <slot />
      </main>
      <Footer />
    </Sprite.Provider>
  </body>
</html>
