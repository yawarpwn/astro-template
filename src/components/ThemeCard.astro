---
import { Image, Picture } from "@astrojs/image/components";
import { neonOutlineCardStyle} from './styles'
const { theme } = Astro.props;
---

<article class:list={["flex flex-col bg-neutral-50 border", neonOutlineCardStyle]}>
  <a class="overflow-hidden rounded-t-lg shadow aspect-w-16 aspect-h-9">
    <Picture
      src={theme.image}
      alt={theme.title}
      sizes="(max-width: 640px) 50vw, (max-width: 1024px) 33vw, 100vw"
      widths={[400, 800]}
      aspectRatio="16:9"
    />
  </a>
  <div class="flex items-center justify-between p-4">
    <h2 class="flex items-center gap-2 text-lg font-bold">
      <a class="subtle">
        {theme.title}
      </a>
    </h2>
    <p
      class:list={[
        "font-bold text-xs px-3 py-1 rounded-full tracking-wide",
        theme.buyURL?.href
          ? "bg-primary-800 text-neutral-50"
          : "bg-primary-100 text-primary-800",
      ]}
    >
      {theme.buyURL?.href ? "PAID" : "FREE"}
    </p>
  </div>
  <p class="px-4 flex-1 tex-sm mb-4 ">{theme.description}</p>
  {
    theme.author && (
      <div class="px-4 gap-2 flex items-center font-medium text-neutral-600 mb-4">
        {theme.author?.avatar && (
          <Image
            class='w-5 h-5 rounded-full'
            src={theme.author.avatar}
            width={48}
            height={48}
            alt=''
          />
        )}
        <span>{theme.author.text}</span>
      </div>
    )
  }
</article>
  <style>
article:global(img) {
  @apply w-full;
}
  </style>
